@{
    ViewData["Title"] = "Index";
}

@section Styles {

  <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css"  rel="stylesheet" />

    @*ESTILOS DE BOTONES*@
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css"  rel="stylesheet" />


     @*filter columns*@
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css"  rel="stylesheet" />

    <style>
       .buttons-excel,.btn-exportar-pdf,.btn-exportar-print,.buttons-page-length {
        background-color: var(--ColorSecundario) !important;
        color: white !important;
        border-radius: 4px !important;
       }
       .dataTables_filter label input {
        outline: none !important;
        border: 1.5px solid var(--ColorSecundario) !important;
       }

       .items-table tr {
        border: 1px solid transparent !important;
       }

       
    </style>
}

<!-- CARD VIEW CON TABLE RECORRIDOS -->
<div class="card movil">
  <div class="card-header">Gesti√≥n de equipos en planta</div>
  <div class="card-body">
    <div class="container-buttons-listado">
      <button class="btn btn-primary btn-sm" id="btnRegistrarOpciones">Registrar</button>
      @* <a class="btn btn-primary btn-sm" id="btnFiltrar">&#9881;</a> *@
    </div>
    <hr />
    <div class="container-items">
      
    </div>
  </div>
</div>
<!-- MODAL OPTCIONES DE REGISTRO-->
<div class="modal fade" id="exampleModalOpcionesRegistro" tabindex="-1" aria-labelledby="exampleModalOpcionesRegistro"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Opciones de registro</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <div class="mb-2">
          <button class="btn btn-primary" id="btnRegistrarEquipoComputo">Equipo computo</button>
          <button class="btn btn-primary">Linea</button>
          <button class="btn btn-primary">Estacion</button>
          <button class="btn btn-primary">Planta</button>
          
        </div>
        
      </div>
    </div>
  </div>
</div>
<!-- MODAL ACCIONES DE REGISTRO-->
<div class="modal fade" id="exampleModalAccionesRegistro" tabindex="-1" aria-labelledby="exampleModalAccionesRegistro"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Acciones</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <div class="mb-2">
           <button class="btn btn-primary" id="cerrarApp">Cerrar app</button>
            <button class="btn btn-primary" id="reiniciarEquipo">Reiniciar equipo</button>
        </div>
  
      </div>
    </div>
  </div>
</div>

<!-- MODAL REGISTRO DE EQUIPO-->
<div class="modal fade" id="exampleModalRegistrarEquipoComputo" tabindex="-1" aria-labelledby="exampleModalRegistrarEquipo"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Registrar equipo de computo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form id="formRegistrarEquipoComputo">
          <div class="mb-2">
            <label for="personaLibera">Hostname</label>
            <input type="text" class="form-control form-control-sm" name="hostname">
          </div>

          <div class="container-buttons">
            <button type="submit" class="btn btn-success btn-sm">Guardar</button>
          </div>
        </form>
        
      </div>
    </div>
  </div>
</div>

@section Scripts {

   <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    @*SCRIPTS DE BOTONES*@
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>

    @*excel*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

    @*pdf*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    @*imprimir*@
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>



     @*filter columns*@
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>

  <script src="~/js/GestionPlantasMainIndex.js" type="module"></script>
}
